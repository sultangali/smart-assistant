# ==================== ОСНОВНЫЕ НАСТРОЙКИ ====================
NODE_ENV=development
PORT=5000

# ==================== БАЗА ДАННЫХ ====================
MONGODB_URI=mongodb://localhost:27017/smart-assistant

# ==================== JWT ====================
# ВАЖНО: Измените JWT_SECRET на уникальное значение в production!
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-2024
JWT_EXPIRE=7d

# ==================== АДМИНИСТРАТОР ====================
ADMIN_EMAIL=admin
ADMIN_PASSWORD=admin123!
# Email для получения уведомлений о смене пароля (если отличается от ADMIN_EMAIL)
ADMIN_NOTIFICATION_EMAIL=

# ==================== РОТАЦИЯ ПАРОЛЕЙ ====================
# Интервал смены пароля в днях
PASSWORD_ROTATION_DAYS=7

# ==================== CORS ====================
# Разрешенные источники (можно указать несколько через запятую)
CORS_ORIGIN=http://localhost:5173

# ==================== EMAIL (SMTP) ====================
# Настройки для отправки email уведомлений о смене пароля
# Примеры для популярных провайдеров:

# Gmail:
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Yandex:
# SMTP_HOST=smtp.yandex.ru
# SMTP_PORT=465
# SMTP_SECURE=true
# SMTP_USER=your-email@yandex.ru
# SMTP_PASS=your-password

# Mail.ru:
# SMTP_HOST=smtp.mail.ru
# SMTP_PORT=465
# SMTP_SECURE=true
# SMTP_USER=your-email@mail.ru
# SMTP_PASS=your-password

SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

# ==================== RATE LIMITING ====================
# Окно rate limit в миллисекундах (по умолчанию 15 минут)
RATE_LIMIT_WINDOW_MS=900000
# Максимальное количество запросов за окно
RATE_LIMIT_MAX_REQUESTS=100

# ==================== БЕЗОПАСНОСТЬ ====================
# Количество раундов bcrypt для хеширования паролей
BCRYPT_SALT_ROUNDS=12
# Максимальное количество неудачных попыток входа
MAX_LOGIN_ATTEMPTS=5
# Время блокировки в минутах
LOCK_TIME_MINUTES=30
